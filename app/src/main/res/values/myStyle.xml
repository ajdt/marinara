<?xml version="1.0" encoding="utf-8"?>
<!--
 NOTE: this styles file determines look/feel of the app and widgets, but not placement.
 Placement is done in individual layout xml files.
-->
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="myAppStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:windowBackground">@color/alternate_background</item>
        <item name="android:actionBarStyle">@style/myActionBarStyle</item>
        <item name="actionBarStyle">@style/myActionBarStyle</item>
    </style>
    <style name="myViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="mySpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/old_listview_background</item>
        <item name="android:popupBackground">@drawable/list_item_background</item>
    </style>

    <style name="myDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:windowBackground">@color/alternate_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="myChartStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="myActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/alternate_background</item>
        <item name="background">@color/alternate_background</item>
    </style>

</resources>
